@model ProductModel

<div class="col-lg-4 col-md-6">
    <div class="Model">
        <a href="property-details.html"><img href="~/assets/uploadedImages/@Model.ImgPath" alt=""></a>
        <span class="category">@Model.Category</span>
        <h6>@Model.Price</h6>
        <h4><a href="property-details.html">@Model.Title</a></h4>
        <ul>
            <li>Bedrooms: <span>@Model.BathroomCount</span></li>
            <li>Bathrooms: <span>@Model.BathroomCount</span></li>
            <li>Area: <span>@Model.Area m2</span></li>
            <li>Floor: <span>@Model.Floor</span></li>
            <li>Parking: <span>@Model.Parking spots</span></li>
        </ul>
        <div class="main-button">
            <a href="property-details.html">Schedule a visit</a>
        </div>
    </div>
</div>