@model EmployeeModel

<form asp-controller="Crud" asp-action="Create" method="post">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Fullname</label>
        <input asp-for="Fullname" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
        <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Surname</label>
        <input asp-for="Surname" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Salary</label>
        <input asp-for="Salary" type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>

