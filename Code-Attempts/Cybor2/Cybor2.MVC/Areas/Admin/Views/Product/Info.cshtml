@model ProductModel

<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="item">
            <img width="80" src="~/assets/uploadedImage/@Model.ImgPath" alt="">
            <h4>@Model.Title<br><span>@Model.Desc</span></h4>
            <ul>
                <li><i class="fa fa-star"></i> 4.8</li>
                <li><i class="fa fa-download"></i> 2.3M</li>
            </ul>
        </div>
    </div>
</div>