@model UpdateVM

<div class="col-sm-12 col-xl-12" style="padding: 25px;">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Basic Form</h6>
        <form asp-area="Admin" asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="example" class="form-label">Image</label>
                <input asp-for="ImgFile" class="form-control" id="example" aria-describedby="emailHelp">
                <span asp-validation-for="ImgFile" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="example" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" id="example" aria-describedby="emailHelp">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="example" class="form-label">Description</label>
                <input asp-for="Desc" class="form-control" id="example" aria-describedby="emailHelp">
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>

            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>
